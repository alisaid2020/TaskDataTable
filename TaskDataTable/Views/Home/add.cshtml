@{
    ViewBag.Title = "Customer";
}

<h2>Customer Details</h2>

@Html.Hidden("Get", Url.Action("Get", "Home"))

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer Id</th>
            <th>Customer Name</th>
        </tr>
    </thead>

    <tbody id="tblInfo">
    </tbody>
</table>



@section scripts{

    <script type="text/javascript">
        $(function () {

            // Proxy created on the fly
            var cus = $.connection.myHub;
            debugger;
            // Declare a function on the job hub so the server can invoke it
            var clientServerHub = $.connection.incidentServerHub;
            cus.client.getupdated = function () {
                getData();
            };

            // Start the connection
            $.connection.hub.start();
            getData();
        });

        function getData() {
            var $tbl = $('#tblInfo');
            $.ajax({
                url: $("#Get").val(),
                type: 'GET',
                datatype: 'json',
                success: function (data) {
                    $tbl.empty();
                    //debugger;
                    $.each(data.listCus, function (i, model) {
                        $tbl.append
                            (
                                '<tr>' +
                                '<td>' + model.Id + '</td>' +
                                '<td>' + model.CusId + '</td>' +
                                '<td>' + model.CusName + '</td>' +
                                '<tr>'
                            );
                    });
                    var notifcount = data.listCus.length;
                    $('#notif').text(notifcount);
                    //$("#notif").text = notifcount;
                    //var aaa = $("#notif").attr('title');
                    //alert(aaa);
                    //alert(notifcount);
                }
            });
        }

    </script>

}