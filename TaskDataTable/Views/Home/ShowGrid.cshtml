   });

            var oTable = $('#demoGrid').DataTable();


            $('#txtSearch').keyup(function () {
                oTable.search($(this).val()).draw();
            })


            $('#btnSearch').click(function () {
                oTable = $('#demoGrid').DataTable();
                oTable.columns(1).search($("input[type='search']").val().trim());
                oTable.draw();
